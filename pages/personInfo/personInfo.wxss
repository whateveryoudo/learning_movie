.user_info{
    height:400rpx;
    width:100%;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
    text-align: center;
    position: relative;
}
/*内外阴影*/
.user_info .u_i_avatar{
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx;
    box-shadow: 0 0 300rpx 100rpx rgba(255,255,255,.2),0 1px 0 rgba(255, 255, 255, 0.4);
}
.u_i_word_con{
    display: flex;
    justify-content: center;
}
.user_info .u_i_nickName{
    font-size: 30rpx;
    color:#fff;
    margin-right: 10rpx;
}

.user_info .sex_icon{
    display: inline-block;
    width:44rpx;
    height:44rpx;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.u_i_gentleman{
    background-image: url(data:image/png;base64,);
}
.u_i_madam{
    background-image: url(data:image/png;base64,);
}

.change_skin_icon{
    position: absolute;
    right: 20rpx;
    top:20rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
    border:4rpx solid #fff;
    background-image: url(data:image/png;base64,);
    background-position: center;
    background-repeat: no-repeat;
    background-size: 40rpx;
    background-color: rgba(0, 0, 0, .3);
}

/*下方列表*/
.grid_wrapper{
    display: flex;
    flex-wrap: wrap;
}
.grid_wrapper .g_w_item{
    width: 33.3%;
    padding:40rpx 0;
    margin-right: -2rpx;
    border-bottom: 2rpx solid #ddd;
    border-right: 2rpx solid #ddd;
    display: flex;
    justify-content: center;
    flex-direction: column;
    text-align: center;
}
